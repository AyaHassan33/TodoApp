<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/bg_btn_navigation" android:startColor="@color/bg_btn_navigation" android:type="linear" />

                    <stroke android:width="0.33dp" android:color="@color/blue_color_dark" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|end" android:src="@drawable/ic_arrow" />

            </item>

        </layer-list>

    </item>

</selector>
