<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.tabs.SettingsFragment">

    <View
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/blue_color_light"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textSize="18sp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/language_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/spinner_bg"
        android:layout_marginTop="17dp"
        android:entries="@array/languages"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20sp"
        app:layout_constraintTop_toBottomOf="@id/language_title"

        />
    <TextView
        android:id="@+id/mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode"
        android:textSize="18sp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/language_spinner"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/mode_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginHorizontal="36dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/spinner_bg"
        android:entries="@array/mode"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/mode_title"

        />



</androidx.constraintlayout.widget.ConstraintLayout>