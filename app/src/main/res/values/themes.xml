<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:colorPrimaryDark">@color/blue_color_light</item>
    </style>
    <style name="splash_screen_bg">
        <item name="android:background">@drawable/splash_screen_light</item>
    </style>
    <style name="home_bg">
        <item name="android:background">@color/light_green</item>
    </style>
    <style name="bottom_navigation_view_bg" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="floating_bg">
        <item name="android:backgroundTint">@color/blue_color_light</item>
    </style>
    <style name="bottom_sheet_bg">
        <item name="android:background">@color/white</item>

    </style>
    <style name="txt_time">
        <item name="android:textColor">#363636</item>
        <item name="android:drawableStart">@drawable/ic_timer</item>
    </style>
    <style name="card_day_bg">
        <item name="android:background">@color/white</item>
    </style>
    <style name="txt_day_style">
        <item name="android:textColor">@color/txt_day_color</item>
    </style>
    <style name="spinner_bg">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>
    <style name="toolbar_bg">
        <item name="android:background">@color/blue_color_light</item>
    </style>
    <style name="toolbar_title_color">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="edit_task_bg_tint">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp" />
</resources>